@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<!-- main -->
<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">

			<form asp-action="SignIn" method="post">

				<div asp-validation-summary="All">
				</div>
				<input class="text" type="text" asp-for="EmailAddress" placeholder="Enter Your Email" required="">
				<div class="wthree-text">
					<label class="anim">
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" asp-action="SendResetPasswordUrl" value="Reset Password!">
				</form>
		</div>
	</div>

</div>
