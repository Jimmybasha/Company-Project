@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

	<!-- main -->
	<div class="main-w3layouts wrapper">
		<div class="main-agileinfo">
			<div class="agileits-top">
				<div asp-validation-summary="All">

				</div>
				<form asp-action="SignUp" method="post">
				<input class="text" type="text" asp-for="Username"  placeholder="Username" required="">
				<br />
				<br />
				<input class="text" type="text" asp-for="FirstName" placeholder="FirstName" required="">
				<br />
				<br />
				<input class="text" type="text" asp-for="LastName" placeholder="LastName" required="">
				<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
				<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
				<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" asp-for="isAgree" class="checkbox" required="">
							<span>I Agree To The Terms & Conditions</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNUP">
				</form>
				<p> have an Account? <a asp-action="SignIn" > Login Now!</a></p>
			</div>
		</div>

	</div>
	<!-- //main -->

