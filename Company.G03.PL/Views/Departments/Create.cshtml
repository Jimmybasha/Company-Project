@model Department

@{
    ViewData["Title"] = "Create";
}


<h2>Create Page</h2>

<br />
<br />

<form asp-action="Create" >
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-form-label"></label>
        <input asp-for="@Model.Code" type="text" class="form-control" />
        <span class="alert-danger" asp-validation-for="Code"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" />
        <span class="alert-danger" asp-validation-for="Name"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.DateOfCreation" class="col-form-label"></label>
        <input asp-for="@Model.DateOfCreation"  type="datetime-local" class="form-control" />
        <span class="alert-danger" asp-validation-for="DateOfCreation"></span>

    </div>
    <br />
    <input type="submit" value="Create" class="btn btn-primary">
    <a asp-action="Index" class="btn  btn-light" >Back To List</a>
    
</form>





