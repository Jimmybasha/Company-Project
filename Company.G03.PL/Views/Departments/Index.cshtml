

@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br />
<br />


<a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Create Department</a>

<br />
<br />

@if (Model.Count() > 0)
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Date of Creation</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(var dept in Model)
        {
    <tr>
        <td>@dept.Code </td>
        <td>@dept.Name </td>
        <td>@dept.DateOfCreation </td>

       <partial name="_ButtonsPartialView" model="dept.Id.ToString()" />

    </tr>
            }
    </tbody>
    </table>
        }
        else
        {
            <h1 class="alert-danger">There are No Departments to Display :( </h1>
        }

