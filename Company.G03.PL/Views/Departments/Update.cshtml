@model Department
@{
    ViewData["Title"] = "Update";
}

<h1>Department Update</h1>

<br />
<br />

<form asp-action="Update" >
    <div asp-validation-summary="All" class="alert-danger">

    </div>
<div>
    <div class="form-group">
        <label asp-for="@Model.Code" class="col-form-label"></label>
        <input asp-for="@Model.Code" type="text" class="form-control"  />
        <span asp-validation-for="@Model.Code" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" type="text" class="form-control"  />
        <span asp-validation-for="@Model.Name" class="alert-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.DateOfCreation" class="col-form-label"></label>
        <input asp-for="@Model.DateOfCreation" type="datetime-local" class="form-control"  />
    </div>
    <br />
     <input type="submit" value="Update" class="btn btn-primary">
   <a asp-action="Index" class="btn  btn-light">Back To List</a>
</form>
</div>





