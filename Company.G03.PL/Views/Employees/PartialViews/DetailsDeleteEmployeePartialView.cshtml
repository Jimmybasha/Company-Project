
@model EmployeeViewModel

<div>
    <label class="col-form-label" asp-for=@Model.Name>Name</label>
    <input class="form-control" type="type" asp-for=@Model.Name readonly />

</div>

<div>
    <label class="col-form-label" asp-for=@Model.Age>Age</label>
    <input class="form-control" type="number" asp-for=@Model.Age readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.Email>Email</label>
    <input class="form-control" type="email" asp-for=@Model.Email readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.BirthDate>Birthdate</label>
    <input class="form-control" type="datetime-local" asp-for=@Model.BirthDate readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.Address>Address</label>
    <input class="form-control" type="text" asp-for=@Model.Address readonly />
</div>
<div>
    <label class="col-form-label" asp-for=@Model.PhoneNumber>PhoneNumber</label>
    <input class="form-control" type="text" asp-for=@Model.PhoneNumber readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.Salary>Salary</label>
    <input class="form-control" type="number" asp-for=@Model.Salary readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.IsActive>IsActive</label>
    <input class="form-check" type="checkbox" asp-for=@Model.IsActive readonly />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.HiringDate>HiringDate</label>
    <input class="form-control" type="datetime-local" asp-for=@Model.HiringDate readonly />
</div>
