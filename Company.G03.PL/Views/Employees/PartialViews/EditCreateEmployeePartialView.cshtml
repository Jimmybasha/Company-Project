@model EmployeeViewModel

@{
    var Depts =  new SelectList( (IEnumerable<Department>) ViewData["Departments"],"Id","Name" );
}
<div>
    <label class="col-form-label" asp-for=@Model.Name>Name</label>
    <input class="form-control" type="type" asp-for=@Model.Name />
    <span asp-validation-for="Name" class="alert-danger"></span>

</div>

<div>
    <label class="col-form-label" asp-for=@Model.Age>Age</label>
    <input class="form-control" type="number" asp-for=@Model.Age />
    <span asp-validation-for="Age" class="alert-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for=@Model.Email>Email</label>
    <input class="form-control" type="email" asp-for=@Model.Email />
    <span asp-validation-for="Email" class="alert-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for=@Model.BirthDate>Birthdate</label>
    <input class="form-control" type="datetime-local" asp-for=@Model.BirthDate />
    <span asp-validation-for="BirthDate" class="alert-danger"></span>
</div>

<div>
    <label class="col-form-label" asp-for=@Model.Address>Address</label>
    <input class="form-control" type="text" asp-for=@Model.Address />
    <span asp-validation-for="Address" class="alert-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for=@Model.PhoneNumber>PhoneNumber</label>
    <input class="form-control" type="text" asp-for=@Model.PhoneNumber />
    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
</div> 

<div>
    <label class="col-form-label" asp-for=@Model.Salary>Salary</label>
    <input class="form-control" type="number" asp-for=@Model.Salary />
    <span asp-validation-for="@Model.Salary" class="alert-danger"></span>
</div>


<div>
    <label asp-for="WorkForId" class="col-form-label">Department</label>
    <select asp-items="Depts" asp-for="WorkForId" class="form-select">
        <option value="@null" selected> -- Select Department -- </option>
</select>
</div>

<div class="d-flex" >
    <label class="col-form-label" asp-for=@Model.IsActive>IsActive</label>
    <input class="form-check m-lg-2" type="checkbox" asp-for=@Model.IsActive />
    <span asp-validation-for="IsActive" class="alert-danger"></span>
</div>

<div class="form-group ">
    <label class="col-form-label " asp-for=@Model.Image>Image</label>
    <input asp-for=@Model.Image class="form-control" type="file" />
</div>

<div>
    <label class="col-form-label" asp-for=@Model.HiringDate>HiringDate</label>
    <input class="form-control" type="datetime-local" asp-for=@Model.HiringDate />
    <span asp-validation-for="HiringDate" class="alert-danger"></span>
</div>

<div>
    <input type="submit" class="btn btn-primary" value="Create" />
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</div>


