@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />



<form asp-action="Index">
    <div class="row m-5">

        <div class="col-8">
            <input name="role" class="form-control" placeholder="Search User By Role" type="search" />
        </div>

        <div class="col-4">
            <input class="btn btn-success " value="Search" type="submit" />
        </div>

    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create User</a>


<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.RoleName)</th>
              
            </tr>
        </thead>
        <tbody>

            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id </td>
                    <td>@role.RoleName </td>

                    <partial name="_ButtonsPartialView" model=role.Id />


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert-danger">There are No Roles to Display :( </h1>
}


